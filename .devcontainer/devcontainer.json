{
	"name": "python3-poetry-pyenv",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
        "vscode": {
            "extensions":[
				"ms-python.python",
				"njpwerner.autodocstring",
				"ms-python.vscode-pylance",
				"VisualStudioExptTeam.vscodeintellicode",
				"ms-toolsai.jupyter",
				"donjayamanne.python-environment-manager",
				"charliermarsh.ruff",
				"KevinRose.vsc-python-indent",
				"vsls-contrib.gitdoc",
		    		"ms-vscode.hexeditor"
				//"VisualStudioExptTeam.intellicode-api-usage-examples"
			],
			"settings": {
				// https://marketplace.visualstudio.com/items?itemName=vsls-contrib.gitdoc
				"gitdoc.autoPull": "onPush", //"gitdoc.autoPull": "off",
				"gitdoc.commitMessageFormat": "ccc, LLL d, kkkk, h:mm a ZZ",
				"gitdoc.commitValidationLevel": "none",
				"gitdoc.enabled": true,
				"gitdoc.pullOnOpen": true,
				"git.autofetch": true,
				"jupyter.interactiveWindow.textEditor.executeSelection": true
			}
        }
	}

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
